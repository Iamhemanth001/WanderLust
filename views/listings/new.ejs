<% layout("/layouts/boilerplate") %>
<style>
    @media (max-width: 788px) {
        .cus-new{
            margin-left: 2% !important;
            width: 96%;
        }
    }
</style>

<div class="row">
    <div class="col-8  offset-2 mt-3 cus-new">

        <h3>Create a New Listing</h3>
    
        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required>
                <div class="valid-feedback">That's look Good!</div>              
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>              
            </div>
            
            <label class="form-label">Upload Image</label>
            <div class="input-group mb-3">
                <input type="file" name="listing[image]" class="form-control" id="inputGroupFile02">
                <label class="input-group-text" for="inputGroupFile02">Upload</label>
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required >
                    <div class="invalid-feedback">Price should be valid</div>              
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>              
                </div>
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-select" required>
                        <option value="">Select a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="invalid-feedback">Please select a category</div>
                </div>
    
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Agra,Uttar Pradesh" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>              
                </div>        
            </div>

            <button class="btn add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>
